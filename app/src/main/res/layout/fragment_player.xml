<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#171717"
    tools:context=".PlayerFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/pl_like_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="45dp"
        android:backgroundTint="#535050"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/like_anim"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/like_img"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:background="@drawable/back2"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/current_music_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/all_song_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/circle_anim"
        android:layout_width="475dp"
        android:layout_height="475dp"
        app:lottie_rawRes="@raw/cirle_anim"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/pl_img"
        app:layout_constraintLeft_toLeftOf="@id/pl_img"
        app:layout_constraintRight_toRightOf="@id/pl_img"
        app:layout_constraintBottom_toBottomOf="@id/pl_img"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/circular_anim"
        android:layout_width="425dp"
        android:layout_height="425dp"
        app:lottie_rawRes="@raw/circular_anim"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/pl_img"
        app:layout_constraintLeft_toLeftOf="@id/pl_img"
        app:layout_constraintRight_toRightOf="@id/pl_img"
        app:layout_constraintBottom_toBottomOf="@id/pl_img"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pl_img"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/artist"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"/>
    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/sound_progress"
        android:layout_width="275dp"
        android:layout_height="275dp"
        app:cpb_background_progressbar_color="#b6bbd8"
        app:cpb_background_progressbar_width="3dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="#FF0172BB"
        app:cpb_progressbar_width="5dp"
        app:cpb_round_border="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/pl_img"
        app:layout_constraintLeft_toLeftOf="@id/pl_img"
        app:layout_constraintRight_toRightOf="@id/pl_img"
        app:layout_constraintTop_toTopOf="@id/pl_img" />

    <TextView
        android:id="@+id/pl_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pl_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Love of the Brain"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/pl_music_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pl_song_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/seekbar"
        android:text="11:11"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/pl_music_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pl_song_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/seekbar"
        android:text="11:11"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginEnd="15dp"/>
    <TextView
        android:id="@+id/pl_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pl_song_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Danito and Athina"
        android:textSize="12sp"
        android:textColor="#858080"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="5dp"/>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintTop_toBottomOf="@id/pl_artist_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:thumb="@drawable/seekbar_thumb"
        android:progressDrawable="@drawable/custom_seekbar"/>

    <LinearLayout
        android:id="@+id/this_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.09"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/seekbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pl_prev_10"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/prev_10"
            app:lottie_autoPlay="true"
            android:layout_weight="1"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pl_prev_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/prev"
            android:layout_weight="1"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pl_play_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/pause_play"
            android:layout_weight="1"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pl_next_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/next"
            android:layout_weight="1"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pl_next_10"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/next_10"
            app:lottie_autoPlay="true"
            android:layout_weight="1"/>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bottom_anim"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/this_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_rawRes="@raw/bottom_anim"
        android:scaleType="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>